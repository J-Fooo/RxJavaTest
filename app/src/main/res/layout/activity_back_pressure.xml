<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackPressureActivity"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/tv_event_cache_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/event_cache"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#7CB342"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/tv_sync_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_subscribe"
        app:layout_constraintTop_toBottomOf="@id/tv_event_cache_size"
        app:layout_constraintLeft_toLeftOf="@id/tv_event_cache_size"
        android:background="#FB8C00"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_async_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/async_subscribe"
        app:layout_constraintTop_toBottomOf="@id/tv_sync_subscribe"
        app:layout_constraintLeft_toLeftOf="@id/tv_sync_subscribe"
        android:background="#B8416D"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_avoid_oom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/avoid_oom"
        app:layout_constraintTop_toBottomOf="@id/tv_async_subscribe"
        app:layout_constraintLeft_toLeftOf="@id/tv_async_subscribe"
        android:background="#00897B"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscription_request"
        app:layout_constraintTop_toBottomOf="@id/tv_avoid_oom"
        app:layout_constraintLeft_toLeftOf="@id/tv_avoid_oom"
        app:layout_constraintRight_toRightOf="@id/tv_avoid_oom"
        android:background="#039BE5"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_request"
        app:layout_constraintLeft_toLeftOf="@id/tv_request"
        android:orientation="vertical"
        android:background="@drawable/bg_item_theme"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_pressure_way"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_ERROR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_pressures_error"
            android:background="#42B3AF"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_BUFFER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_pressures_buffer"
            android:background="#42B3AF"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_DROP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_pressures_drop"
            android:background="#42B3AF"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_LATEST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_pressures_latest"
            android:background="#42B3AF"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>